<section class="page-header">
  <h1>Admin — Inquiries</h1>
  <p class="muted">Manage messages submitted through “Ask a Librarian”.</p>
  <form method="POST" action="/admin/logout" style="margin-top:10px;">
    <a href="/admin/gallery" class="btn">Manage Gallery</a>
  <button class="btn btn-danger" type="submit">Logout</button>
</form>
</section>

<div class="card">
  <% if (!inquiries || inquiries.length === 0) { %>
    <div class="empty-state">No inquiries yet.</div>
  <% } else { %>
    <div class="admin-table">
      <div class="admin-row admin-head">
        <div>Name</div>
        <div>Category</div>
        <div>Status</div>
        <div>Date</div>
        <div>Action</div>
      </div>

      <% inquiries.forEach(i => { %>
        <div class="admin-row">
          <div>
            <strong><%= i.name %></strong><br />
            <span class="muted"><%= i.email %></span>
          </div>

          <div><%= i.category %></div>

          <div>
            <span class="pill <%= i.status === 'resolved' ? 'pill-ok' : 'pill-new' %>">
              <%= i.status %>
            </span>
          </div>

          <div class="muted">
            <%= new Date(i.createdAt).toLocaleString() %>
          </div>

          <div>
            <a class="btn btn-small" href="/admin/inquiries/<%= i._id %>">View</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>